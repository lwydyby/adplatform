                    this.query();
                    this.dialogFormVisible=false;
                    this.setMsg("创建成功");
                    }, function (response) {
                        this.isloading=false;

                    });
                }else{
                    this.$ http.post(URL+MENUID.edit${className},this.formData).then(function (response) {

                    this.query();
                    this.setMsg("修改成功");
                    this.dialogFormVisible = false
                    }, function (response) {
                    this.isloading=false;

                    });
                }

            },


    }

    required: true,
    message: '请输入${column.comments}',
    trigger: 'blur'
  },
  {
    min: 3,
    max: 20,
    message: '长度在 3 到 20 个字符',
    trigger: 'blur'
  }
]#if($velocityCount != $columns.size()), #end#end
#end
